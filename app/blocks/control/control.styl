/**
 * Общие стили для чекбоксов и радиобатонов
 */
.control
	position relative
	padding-left 26px
	display inline-block
	cursor pointer

	&__input
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		cursor pointer
		opacity 0

	&__icon
		position absolute
		top 3px
		left 0
		background-repeat no-repeat

		&::before
			position absolute
			content ''
			background-repeat no-repeat
			opacity 0
			transition .2s

	&__content
		display block
		font-size 21px
		font-weight bold
		line-height 1.2

	&__link
		position relative

	&__input:checked + &__icon::before
		opacity 1

	&_type_checkbox &__icon
		width 19px
		height 18px
		background-image embedurl('checkbox.png')
		background-size 19px 18px

		+retina()
			background-image embedurl('checkbox@2x.png')

		&::before
			left 3px
			bottom 2px
			width 21px
			height 27px
			background-image embedurl('check-mark.png')
			background-size 21px 27px
			clip-path inset(0 100% 0 0)

			+retina()
				background-image embedurl('check-mark@2x.png')


	@supports (clip-path: inset(0 0 0 0))
		&_type_checkbox &__icon::before
			opacity 1

	&_type_checkbox &__input:checked + &__icon::before
		clip-path inset(0 0 0 0)

	&_type_radio
		padding-left 34px

	&_type_radio &__icon
		top -2px
		width 28px
		height 28px
		background-image embedurl('radio.png')
		background-size 28px 28px

		+retina()
			background-image embedurl('radio@2x.png')

		&::before
			top 0
			right 0
			left 0
			bottom 0
			margin auto
			width 13px
			height 14px
			background-image embedurl('radio-mark.png')
			background-size 13px 14px

			+retina()
				background-image embedurl('radio-mark@2x.png')

