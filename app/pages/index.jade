extends /blocks/layout-default/layout-default

include /blocks/case/case
include /blocks/field/field
include /blocks/fieldset/fieldset
include /blocks/control/control
include /blocks/text-link/text-link
include /blocks/slider/slider
include /blocks/textarea/textarea
include /blocks/plan-list/plan-list

block head
	- var pageTitle = 'CSSSR Project Template';

block content

	+case()
		form
			+fieldset()
				each field in person
					+field({
						label: field.label,
						value: field.value,
						type: 'text'
					})

			+fieldset({ legend: 'Расскажите о себе чекбоксами'})
				p Отметьте чекбоксами пункты, которые соответствуют вашим скиллам. Кстати, отсутствие опыта не означает, что у вас меньше шансов стать одним из наших товарищей. Это означает, что вы будете получать те задачи, с которыми гарантировано будете справляться.

				+b.skills
					each skill in skills
						+e.item
							+control({
								type: 'checkbox',
								checked: skill.active
							})
								| !{skill.text}

			+fieldset({ legend: 'Уровень владения JavaScript'})
				+slider({ data: jsLevel })

			+fieldset({ legend: 'Расскажите о себе словами'})
				p Напишите пару предложений, чем вас привлекла наша вакансия и чего вы ожидаете от работы в CSSSR. Кстати, будет здорово, если при нехватке места для текста строки будут добавляться автоматически.
				+textarea(id="about-textarea" rows="1") !{esse}

			+fieldset({ legend: 'Какие у вас планы на будущее?' })
				p Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.
				+b.plan-list
					each plan in plans
						+e.item
							+control({
								type: 'radio',
								name: 'plan',
								checked: plan.active
							})
								| !{plan.text}

			+field({
				label: 'Дата заполнения',
				readonly: true,
				value: datestamp
			})


